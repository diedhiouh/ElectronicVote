<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mon application ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/Style.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ELECTRONIC VOTE", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Accueil", "Index", "Admin")</li>
                    <li>@Html.ActionLink("Candidat", "Index", "Candidats")</li>
                    <li>@Html.ActionLink("Electeur", "Index", "Electeurs")</li>
                    <li>@Html.ActionLink("Bureau", "Index", "BureauVotes")</li>
                    <li>@Html.ActionLink("Compte", "Index", "Comptes")</li>
                </ul>

                <a href="Admin/Connexion" class="btn btn-warning" style="float:right; margin:10px">Deconnexion</a>
            </div>
        </div>
    </div>
        
    <div class="container body-content">

        <div class="container">
            <div class="row">
                <div class="col-sm-3">
                    <div class="sidebar-nav">
                        <div class="navbar navbar-default" role="navigation">
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-navbar-collapse">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                                <span class="visible-xs navbar-brand">Sidebar menu</span>
                            </div>
                            <div class="navbar-collapse collapse sidebar-navbar-collapse">
                                <ul class="nav navbar-nav">
                                    <li class="active"><a href="/Admin">TABLEAU DE BORD</a></li>
                                    <li>@Html.ActionLink("Bureau de vote", "Index", "BureauVotes")</li>
                                    <li>@Html.ActionLink("Candidat", "Index", "Candidats")</li>
                                    <li>@Html.ActionLink("Electeur", "Index", "Electeurs")</li>
                                    <li>@Html.ActionLink("Compte", "Index", "Comptes")</li>
                                </ul>
                            </div><!--/.nav-collapse -->
                        </div>
                    </div>
                </div>
                <div class="col-sm-8">
                    @RenderBody()
                </div>
            </div>
        </div>


        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mon application ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
