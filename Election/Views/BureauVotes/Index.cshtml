@model IEnumerable<Election.Models.BureauVote>
@{
    Layout = "~/Views/Shared/_admin.cshtml";
}

@{
    ViewBag.Title = "Index";
}
<link href="~/Content/Style.css" rel="stylesheet" />
<h2 class="alert alert-info">Bureau de vote</h2>
<div class="container">
    <div class="row">
        
        <div class="col-sm-8">

            <p>
                <div class="btn btn-success">
                    @Html.ActionLink("Nouveau bureau de vote", "Create")
                </div>
            </p>
            <table class="table table-responsive">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.code)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.lieu)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.code)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.lieu)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }

            </table>

        </div>
    </div>
</div>
