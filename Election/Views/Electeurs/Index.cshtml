@model IEnumerable<Election.Models.Electeur>
@{
    Layout = "~/Views/Shared/_admin.cshtml";
}

@{
    ViewBag.Title = "Electeur";
}

<h2 class="alert alert-info">Electeur</h2>
<div class="container">
    
        <div class="col-sm-8">
            <p>
                <div class="btn btn-default">
                    @Html.ActionLink("Nouveau electeur", "Create")
                </div>
            </p>
            <table class="table table-striped">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.prenom)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.nom)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.cni)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.avoter)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.candidat)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.bureau)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.compte)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.prenom)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.nom)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.cni)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.avoter)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.candidat)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.bureau)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.compte)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }

            </table>

        </div>
    </div>
